{
  "private": true,
  "build": {
    "appId": "com.kenrobot.KBlock",
    "productName": "KBlock",
    "compression": "maximum",
    "files": [
      "main",
      "renderer",
      "node_modules",
      "!node_modules/serialport/build/Release/obj",
      "!node_modules/**/test",
      "!node_modules/**/tests",
      "!node_modules/**/example",
      "!node_modules/**/examples",
      "!node_modules/**/doc",
      "!node_modules/**/docs",
      "!node_modules/**/*.md",
      "!node_modules/**/*.d.ts",
      "!node_modules/**/*appveyor.yml*",
      "!node_modules/**/.*"
    ],
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "win": {
      "publisherName": "KenRobot"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "warningsAsErrors": false,
      "menuCategory": true,
      "language": "2052",
      "shortcutName": "KBlock"
    },
    "mac": {
      "category": "public.app-category.education"
    },
    "dmg": {
      "contents": [
        {
          "x": 114,
          "y": 196
        },
        {
          "x": 416,
          "y": 196,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "iconSize": 128,
      "title": "KRobot"
    },
    "linux": {
      "category": "Education",
      "icon": "icon",
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3"
      ]
    }
  },
  "devDependencies": {
    "7zip-bin": "^2.4.1",
    "asar": "^0.13.1",
    "babel-core": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "browserify": "^14.5.0",
    "del": "^3.0.0",
    "electron": "^1.7.10",
    "electron-builder": "^19.55.3",
    "fs-extra": "^4.0.3",
    "globby": "^6.1.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^4.1.0",
    "gulp-babel": "^7.0.1",
    "gulp-clean-css": "^3.9.2",
    "gulp-if": "^2.0.2",
    "gulp-minify-html": "^1.0.6",
    "gulp-requirejs-optimize": "^1.2.0",
    "gulp-ruby-sass": "^2.1.1",
    "gulp-sftp": "^0.1.5",
    "gulp-uglify": "^3.0.0",
    "hasha": "^3.0.0",
    "isutf8": "^2.0.2",
    "minimist": "^1.2.0",
    "nconf": "^0.8.5",
    "q": "^1.5.1",
    "run-sequence": "^2.2.1",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^1.1.2"
  }
}
