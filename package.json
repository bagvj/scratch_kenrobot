{
  "private": true,
  "build": {
    "appId": "com.kenrobot.KenRobot",
    "compression": "maximum",
    "files": [
      "main",
      "public",
      "node_modules",
      "!node_modules/serialport/build/Release/obj",
      "!node_modules/**/test",
      "!node_modules/**/tests",
      "!node_modules/**/example",
      "!node_modules/**/examples",
      "!node_modules/**/doc",
      "!node_modules/**/docs",
      "!node_modules/**/*.md",
      "!node_modules/**/*.d.ts",
      "!node_modules/**/*appveyor.yml*",
      "!node_modules/**/.*"
    ],
    "win": {
      "publisherName": "KenRobot"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "warningsAsErrors": false,
      "menuCategory": true,
      "artifactName": "${productName}.${ext}",
      "language": "2052"
    },
    "linux": {
      "icon": "icon",
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3"
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 114,
          "y": 196
        },
        {
          "x": 416,
          "y": 196,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "iconSize": 128,
      "title": "KenRobot"
    }
  },
  "devDependencies": {
    "7zip-bin": "^2.1.0",
    "asar": "^0.13.0",
    "babel-preset-es2015": "^6.24.1",
    "browserify": "^14.4.0",
    "del": "^3.0.0",
    "electron": "^1.6.11",
    "electron-builder": "^19.17.0",
    "fs-extra": "^4.0.1",
    "globby": "^6.1.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^4.0.0",
    "gulp-babel": "^6.1.2",
    "gulp-clean-css": "^3.7.0",
    "gulp-if": "^2.0.2",
    "gulp-minify-html": "^1.0.6",
    "gulp-requirejs-optimize": "^1.2.0",
    "gulp-ruby-sass": "^2.1.1",
    "gulp-sftp": "^0.1.5",
    "gulp-uglify": "^3.0.0",
    "hasha": "^3.0.0",
    "isutf8": "^2.0.1",
    "minimist": "^1.2.0",
    "nconf": "^0.8.4",
    "q": "^1.5.0",
    "run-sequence": "^2.1.0",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0"
  }
}
